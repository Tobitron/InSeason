<div class="header">
  <div class="title">Boston</div>
</div>

<div class="image-container">
  <div class="row">
  <% @ripe_vegetables.each do |vegetable| %>
    <div>
      <%= image_tag vegetable.name, alt: vegetable.name, id: "ripe", class: "small-#{@column_size} column" %>
    </div>
  <% end %>
  </div>

  <div class="row" id="unripe_row">
  <% @not_ripe_vegetables.each do |vegetable| %>
    <div>
      <%= image_tag vegetable.name, alt: vegetable.name, id: "not_ripe", class: "small-2 column" %>
    </div>
  <% end %>
  </div>
</div>
